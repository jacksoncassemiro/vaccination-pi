{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "yarn build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "dev",
			"type": "shell",
			"command": "yarn dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "lint",
			"type": "shell",
			"command": "yarn lint",
			"group": "test",
			"isBackground": false,
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "install",
			"type": "shell",
			"command": "yarn install",
			"group": "build",
			"isBackground": false
		}
	]
}
